{% extends 'base.html.twig' %}

{% block title %}
    Modifier un professeur - {{parent()}} 
{% endblock %}

{% block body %}
<section class="container">
    <div class="form-signin">
        <h1 class="h3 mb-3 fw-bold fst-italic text-center">Modifier un professeur</h1>

        <div class="form-floating ">
        {{ form_start(formView) }}
        </div>
            <div class="form-floating my-2">
            {{ form_widget(formView.email) }}
            {{ form_label(formView.email) }}
             </div>
            <div class="form-floating my-2">
            {{ form_widget(formView.lastname)}}
            {{ form_label(formView.lastname)}}
            </div>
            <div class="form-floating my-2">
            {{ form_widget(formView.firstname)}}
            {{ form_label(formView.firstname)}}
            </div>
            <div class="form-floating my-2">
            {{ form_widget(formView.discipline)}}
            {{ form_label(formView.discipline)}}
            </div>
            <div class="form-floating my-2">
            {{ form_label(formView.classroom)}}
            {{ form_widget(formView.classroom)}}
            </div>

        {{ form_end(formView) }}
        </div>
            <a href="{{path('teacher_home')}} " class="badge bg-secondary my-2" style="width: 85px; color: white; text-decoration: none">Retour</a>
    </section>
</main>
{% endblock %}
